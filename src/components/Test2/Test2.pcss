.block2 {
  background-color: indianred;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;

  @media screen and (max-width: 1024px) {
    background-color: darkcyan;
    flex-direction: row-reverse;
  }

  &__child {
    position: relative;
    flex-basis: calc(100%/3 - 15px);
    text-align: left;
    margin-bottom: calc(45px/2);
    background-color: darkcyan;

    @media screen and (max-width: 1024px) {
      background-color: indianred;
    }
  }
}

.block2-float {
  background-color: indianred;

  &:before,
  &:after {
    clear: both;
    content: '';
    display: block;
  }

  @media screen and (max-width: 1024px) {
    background-color: darkcyan;
  }

  &__child {
    $thirdPart: 100% / 3;
    width: calc($thirdPart - 15px);
    float: left;
    margin-bottom: calc(45px / 2);
    text-align: left;
    background-color: darkcyan;

    &:not(:first-child) {
      margin-left: calc(45px / 2);
    }

    &:nth-child(4n) {
      margin-left: 0;
    }

    @media screen and (max-width: 1024px) {
      background-color: indianred;
      float: right;

      &:not(:first-child) {
        margin-left: 0;
        margin-right: calc(45px / 2);
      }

      &:nth-child(4n) {
        margin-left: 0;
        margin-right: 0;
      }
    }
  }
}
